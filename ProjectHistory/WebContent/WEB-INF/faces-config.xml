<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<!-- PANTALLAS GENERICAS -->
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>login-page</from-outcome>
			<to-view-id>/pages/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/pages/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>control-usuarios</from-outcome>
			<to-view-id>/pages/Usuario/controlUsuarios.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>control-areas</from-outcome>
			<to-view-id>/pages/Area/controlAreas.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>control-plantillas</from-outcome>
			<to-view-id>/pages/Plantilla/controlPlantillas.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>control-clientes</from-outcome>
			<to-view-id>/pages/Cliente/controlClientes.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>control-proyectos</from-outcome>
			<to-view-id>/pages/Proyecto/controlProyectos.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>reporte-plantillas</from-outcome>
			<to-view-id>/pages/Reportes/reportePlantillas.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>home-page</from-outcome>
			<to-view-id>/pages/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/Proyecto/controlProyectos.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>irControlProyectos</from-outcome>
			<to-view-id>/pages/Proyecto/editarProyecto.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>irAsociarDocumentos</from-outcome>
			<to-view-id>/pages/Proyecto/asociarDocumentos.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
</faces-config>